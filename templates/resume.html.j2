<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{ personal.name }} - Resume</title>
  <style>
  @page { size: A4; margin: 14mm 12mm; }
    body { font-family: Arial, sans-serif; }
    h2 { page-break-after: avoid; }
    .item { page-break-inside: avoid; }

    body { font-family: Arial, sans-serif; margin: 40px; }
    h1 { margin-bottom: 0; }
    .contact { color: #555; margin-top: 4px; }
    .section { margin-top: 24px; }
    .item { margin-bottom: 12px; }
    .title { font-weight: bold; }
    .meta { color: #666; font-size: 0.95em; }
    ul { margin: 6px 0 0 18px; }
    .skills span { margin-right: 8px; }
    hr { border: none; border-top: 2px solid #000000; margin: 3pt 0 10pt 0; }
  </style>
</head>
<body>
  <h1>{{ personal.name }}</h1>
  <hr>
  <div class="contact">
    {{ personal.email }} · {{ personal.phone }} · {{ personal.location }}
  </div>

  {% if summary %}
  <div class="section">
    <h2>Objective</h2>
    <hr>
    <p>{{ summary }}</p>
  </div>
  {% endif %}



  {% if experience %}
  <div class="section">
    <h2>Professional Experience</h2>
    <hr>
    {% for e in experience %}
      <div class="item">
        <div class="title">{{ e.role }} — {{ e.company }}</div>
        <div class="meta">{{ e.start }} – {{ e.end }}{% if e.location %} · {{ e.location }}{% endif %}</div>
        {% if e.highlights %}
          <ul>
            {% for h in e.highlights %}<li>{{ h }}</li>{% endfor %}
          </ul>
        {% endif %}
      </div>
    {% endfor %}
  </div>
  {% endif %}

  {% if projects %}
  <div class="section">
    <h2>Recent Projects</h2>    
    {% for p in projects %}
      <div class="item">
        <div class="title">{{ p.name }}</div>
        {% if p.link %}<div class="meta">{{ p.link }}</div>{% endif %}
        <div>{{ p.description }}</div>
      </div>
    {% endfor %}
  </div>
  {% endif %}

  {% if skills %}
    <div class="section">
      <h2>Skills</h2>
      <hr>
      <div class="skills">
        {% for s in skills %}<span>• {{ s }}</span>{% endfor %}
      </div>
    </div>
  {% endif %}

  {% if education %}
  <div class="section">
    <h2>Education</h2>
    <hr>
    {% for ed in education %}
      <div class="item">
        <div class="title">{{ ed.degree }} — {{ ed.school }}</div>
        <div class="meta">{{ ed.start }} – {{ ed.end }}{% if ed.location %} · {{ ed.location }}{% endif %}</div>
        {% if ed.details %}<div>{{ ed.details }}</div>{% endif %}
      </div>
    {% endfor %}
  </div>
  {% endif %}

 
</body>
</html>
